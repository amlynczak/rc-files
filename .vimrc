set autoread
set backspace=indent,eol,start
set clipboard=unnamed,unnamedplus
set encoding=utf8
set hidden
set mouse=a
set nowrap
set number
set relativenumber
set term=xterm-256color
set wildmenu wildmode=longest:full,full

set scrolloff=999
set showmatch
syntax on

set hlsearch ignorecase incsearch smartcase

set lazyredraw
set nocursorline
set ttyfast
